<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="264dp"
        android:layout_marginStart="74dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingEnd="16dp"
        android:paddingStart="2dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="match_parent"
            android:id="@+id/al_si_pbar"
            android:layout_marginStart="62dp"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/custom_storage_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:id="@+id/al_si_title"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="78dp"
            android:textColor="@color/colorBlack"
            android:text="Phone Storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:id="@+id/al_si_space"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="52.62 / 105.76 GB"
            android:layout_marginStart="78dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="148dp"
            android:src="@drawable/al_storage_diamond_shape"
            android:layout_height="148dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="50"
                android:id="@+id/al_si_per"
                android:textColor="@color/colorBlack"
                android:textSize="28sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="%"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>