<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.telegram.ui.MIntroActivity">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_back"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textSize="38sp"
        android:text="@string/make_it_simple"
        android:textColor="@color/colorWhite"
        app:fontFamily="sans-serif-smallcaps"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="92dp"
        android:background="@color/colorWhite"/>

    <!--<android.support.design.widget.TabLayout-->
        <!--android:id="@+id/m_intro_tabs"-->
        <!--android:layout_marginTop="108dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_width="102dp"-->
        <!--android:background="@color/transWhite80"-->
        <!--android:layout_height="2dp" />-->

    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="110dp"
        android:id="@+id/m_intro_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:background="@color/transBlack80"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/m_intro_skip"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:padding="16dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/m_intro_next"
            android:textStyle="bold"
            android:text="@string/next"
            android:background="@color/transBlack80"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:padding="16dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>