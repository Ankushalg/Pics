<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="34dp"
            android:id="@+id/fv_close"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_height="56dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:id="@+id/fv_heading_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/fv_heading"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:text="Internal Storage"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:id="@+id/fv_sub_heading"
                android:ellipsize="start"
                android:textColor="@color/colorBlack"
                android:text="/storage/"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
        <ImageView
            android:layout_width="34dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/fv_info"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_new_releases_black_24dp"
            android:layout_height="56dp" />
        <ImageView
            android:layout_width="34dp"
            android:id="@+id/fv_menu"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_height="56dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/mlaunch_activity_background"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/fv_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/fv_p_bar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>